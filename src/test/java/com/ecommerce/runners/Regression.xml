<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Regression Suite" parallel="classes" thread-count="8">
    <listeners>
        <listener class-name="com.ecommerce.utility.TestListeners"/>
    </listeners>
    <parameter name="userName" value="Test User"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="email" value="abc@gmail.com"></parameter>
    <parameter name="password" value="abc1234"></parameter>
    <test name="Regression Test"  >

        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>

        <packages>
            <package name="com.ecommerce.tests.*"></package>
        </packages>
       <!-- <classes>
            <class name="com.ecommerce.tests.TestingTestNGAnnotationsTest"/>
            <class name="com.ecommerce.tests.LoginFunctionalityTest"/>
            <class name="com.ecommerce.tests.ItemDetailsVerificationTest"/>
            <class name="com.ecommerce.tests.SearchFunctionalityTest"/>

        </classes>-->
    </test>
</suite>